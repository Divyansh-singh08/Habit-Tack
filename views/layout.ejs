<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- favicon icon -->
    <link rel="icon" type="image/x-icon" href="/assets/images/titleIcon.svg">
    <!-- font-awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/fontawesome.min.css">
    <!-- layout css -->
    <link rel="stylesheet" href="/css/layout.css" type="text/css">
    <!-- nav header css -->
    <link rel="stylesheet" href="/css/header.css" type="text/css">
    <!-- notify for notification -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <!-- JQuery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.2/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/5ed7aef597.js" crossorigin="anonymous"></script>
    <%- style %>
    <title> Habit-Track </title>
</head>
<body>
    <%- include('_header') %>
    <main>
        <%- body %>
    </main>

    <%- script %>
    <!-- here u have to write the notify logical  -->
    <script>
        
        <% if(flash.success && flash.success.length > 0){ %>
                
                new Noty({
                theme:'relax',
                text:'<%= flash.success %>',
                type:'success',
                layout:'topRight',
                timeout:1500
            }).show();
                
        <% } %>
        <% if(flash.error && flash.error.length > 0){ %>
            
            new Noty({
                theme:'relax',
                text:'<%= flash.error %>',
                type:'error',
                layout:'topRight',
                timeout:1500
            }).show();
                
        <% } %>
    </script>
    
</body>
</html>